            android:backgroundTint="@color/secondary"
            android:src="@drawable/ic_nav_arrow"
            app:layout_constraintBottom_toTopOf="@+id/option_divider8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/option_text5"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/option_divider8"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/option_text5" />
