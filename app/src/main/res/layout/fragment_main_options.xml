            android:src="@drawable/ic_nav_arrow"
            app:layout_constraintBottom_toTopOf="@+id/option_divider7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/option_text4"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/option_divider7"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/option_text4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_report_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_configuration">

        <ImageView
            android:id="@+id/option_icon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/icon_report_brand"
            app:layout_constraintBottom_toTopOf="@+id/option_divider8"
            app:layout_constraintEnd_toStartOf="@+id/option_text5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/option_text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input__no_stroke"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:maxLength="254"
            android:padding="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
